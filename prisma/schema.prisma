generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id   Int   @id @default(autoincrement())
  name String 
  email String @unique
  skills  Skills[]
  projects  Project[]
}

model Skills{
  id  Int @id @default(autoincrement())
  name String
  icon String
  userId  Int 
  user    User  @relation(fields: [userId],references: [id])
}

model Project{
  id  Int @id @default(autoincrement())
  title String
  imageUrl String
  description String
  technologies Technologies[]
  userId   Int
  user    User @relation(fields: [userId],references: [id])
}

model Technologies{
  id  Int @id @default(autoincrement())
  name String
  projectId Int
  project Project @relation(fields: [projectId],references: [id])
}